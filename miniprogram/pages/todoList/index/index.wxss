.slide-width-btn {
  width: 65px;
}

.input-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background: var(--dracula-background);
  right: 0;
}

.input-container {
  background: var(--dracula-current-line);
  margin: 30rpx;
  border-radius: 4px;
  height: 44px;
  padding: 24rpx 100rpx 24rpx 24rpx;
  box-sizing: border-box;
  position: relative;
}

input {
  caret-color: var(--dracula-foreground);
  color: var(--dracula-foreground);
}

.scroll-container {
  padding-bottom: 50px;
}

.loading-container {
  height: 74px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading {
  color: var(--dracula-purple);
}

.add-btn {
  position: absolute;
  top: 50%;
  right: 5rpx;
  transform: translateY(-50%);
  color: var(--dracula-foreground);
}

.no-flex-container {
  flex: none !important;
}

.title-container {
  display: flex;
  align-items: center;
  color: var(--dracula-cyan);
}

.circle {
  width: 16px;
  height: 16px;
  border: 1px #999 solid;
  border-radius: 4px;
  margin-right: 8px;
}

.checked {
  font-size: 16px;
  margin-right: 8px;
  color: var(--dracula-green);
  line-height: 24px;
}

.invalid {
  text-decoration: line-through;
  color: var(--dracula-comment);
}

.avatar {
  height: 24px;
  width: 24px;
  border-radius: 50%;
  margin-right: 8px;
}
